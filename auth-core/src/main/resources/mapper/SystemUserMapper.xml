<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djz.auth.mapper.SystemUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.djz.auth.entity.SysUser">
        <id column="id" property="id" />
        <result column="mobile" property="mobile" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="createTime" property="createTime" />
        <result column="status" property="status" />
    </resultMap>



    <resultMap id="UserModel" type="com.djz.auth.entity.SysUser">
        <id column="id" property="id" />
        <result column="mobile" property="mobile" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="createTime" property="createTime" />
        <result column="status" property="status" />
    </resultMap>


    <!-- 等同于编写一个普通 list 查询，mybatis-plus 自动替你分页 -->
    <select id="selectPageByConditionUser"  resultMap="UserModel">
        select u.*,r.rolename from tb_user u,tb_user_to_role t ,tb_role r
        where u.id =t.userno AND  t.rolecode =r.rolecode and r.rolename = 'user'
        <if test="info != null and info != '' ">
            and (u.mobile like concat('%',#{info},'%')  or u.username like concat('%',#{info},'%'))
        </if>
        <if test="startTime != null and startTime != '' and endTime != null and endTime != '' ">
            and u.createtime between #{startTime,jdbcType=BIGINT} and #{endTime,jdbcType=BIGINT}
        </if>
        and u.status in
        <foreach item="item" index="index" collection="status"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
        ORDER BY u.createtime DESC
    </select>

</mapper>
